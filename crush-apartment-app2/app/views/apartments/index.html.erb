<p id="notice"><%= notice %></p>

<h1>Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>List date</th>
      <th>Avail date</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Type</th>
      <th>Beds</th>
      <th>Baths</th>
      <th>Pets</th>
      <th>Manager</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.price %></td>
        <td><%= apartment.list_date %></td>
        <td><%= apartment.avail_date %></td>
        <td><%= apartment.address_1 %></td>
        <td><%= apartment.address_2 %></td>
        <td><%= apartment.city %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.zip %></td>
        <td><%= apartment.type %></td>
        <td><%= apartment.beds %></td>
        <td><%= apartment.baths %></td>
        <td><%= apartment.pets %></td>
        <td><%= apartment.manager %></td>
        <td><%= apartment.phone %></td>
        <td><%= apartment.email %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apartment', new_apartment_path %>
